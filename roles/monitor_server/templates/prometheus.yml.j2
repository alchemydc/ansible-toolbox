global:
  scrape_interval: 30s
  scrape_timeout: 10s

rule_files:
  - alert.yml

scrape_configs:
  - job_name: local_prometheus
    metrics_path: /metrics
    static_configs:
      - targets:
          - 'localhost:9090'
  - job_name: pocket
    metrics_path: /metrics
    static_configs:
      - targets:
          - '10.10.60.100:8083'                         # prometheus port controlled in pocket config.json
  - job_name: node  # node_exporter
    metrics_path: /metrics
    static_configs:
      - targets:
{% for monitored_host in monitored_hosts %}
          - '{{ monitored_host }}:9100'
{% endfor %}

