global:
  scrape_interval: 30s
  scrape_timeout: 10s

rule_files:
  - alert.yml

scrape_configs:
  - job_name: local_prometheus
    metrics_path: /metrics
    static_configs:
      - targets:
          - 'localhost:9090'

  - job_name: pocket
    metrics_path: /metrics
    static_configs:
      - targets:
          - 'sdl-pokt:8083'

  - job_name: cosmos
    metrics_path: /metrics
    static_configs:
      - targets:
          - 'agoric-snapshot:44660'
          - 'agoric-relayer-0:44660'
          - 'agoric-relayer-1:44660'
          - 'agoric-main-1:44660'
          - 'agoric-emerynet-main-0:44660'

  - job_name: celo_attestation
    metrics_path: /metrics
    static_configs:
      - targets:
          - 'celo-attestation-v0:8080'
          - 'celo-attestation-v1:8080'

  - job_name: celo_validators
    metrics_path: /debug/metrics/prometheus
    static_configs:
      - targets:
          - 'celo-baklava-proxy:6060'
          - 'celo-baklava-validator:6060'

  - job_name: node  # node_exporter
    metrics_path: /metrics
    static_configs:
      - targets:
{% for monitored_host in monitored_hosts %}
          - '{{ monitored_host }}:9100'
{% endfor %}

  - job_name: traefik
    metrics_path: /metrics
    static_configs:
      - targets:
        - 'zd1-ingress:8080'
        - 'zd2-ingress:8080'
        - 'zd3-ingress:8080'
        - 'zd4-ingress:8080'

