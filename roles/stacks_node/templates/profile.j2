# if running bash
if [ -n "$BASH_VERSION" ]; then
    # include .bashrc if it exists
    if [ -f "$HOME/.bashrc" ]; then
	. "$HOME/.bashrc"
    fi
fi

# set PATH so it includes user's private bin if it exists
if [ -d "$HOME/bin" ] ; then
    PATH="$HOME/bin:$PATH"
fi

# set PATH so it includes user's private bin if it exists
if [ -d "$HOME/.local/bin" ] ; then
    PATH="$HOME/.local/bin:$PATH"
fi

. "$HOME/.cargo/env"

# helpful aliases
alias ll='ls -alF'
alias start_signer='/home/{{ svc_user }}/stacks-blockchain/target/release/stacks-signer run --config /home/{{ svc_user }}/signer/signer-config.toml'
alias start_node='/home/{{ svc_user }}/stacks-blockchain/target/release/stacks-node start --config /home/{{ svc_user }}/node/node-config.toml'
alias stacks='npx stacks'
