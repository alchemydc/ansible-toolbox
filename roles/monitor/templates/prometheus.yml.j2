global:
  scrape_interval: 30s
  scrape_timeout: 10s

rule_files:
  - alert.yml

scrape_configs:
  - job_name: local_prometheus
    metrics_path: /metrics
    static_configs:
      - targets:
          - 'localhost:9090'
  - job_name: pocket
    metrics_path: /metrics
    static_configs:
      - targets:
          - '10.10.60.100:8083'                         # prometheus port controlled in pocket config.json
  - job_name: node  # node_exporter
    metrics_path: /metrics
    static_configs:
      - targets:
          - 'monitor:9100'    # monitor.zanshindojo.org
          - 'sdl-pokt:9100'   # pokt node
          - 'evmos-relayer-0:9100'    # evmos relayer 0
          - 'evmos-relayer-1:9100'    # evmos relayer 1

