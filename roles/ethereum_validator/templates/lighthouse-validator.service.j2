[Unit]
Description=Lighthouse Validator Service
After=network.target network-online.target
Wants=network-online.target
StartLimitBurst=3
StartLimitIntervalSec=300

[Service]
User={{ ethereum_user }}
Group={{ ethereum_user }}
WorkingDirectory=/home/{{ ethereum_user}}
Type=simple
KillMode=process
KillSignal=SIGINT
TimeoutStopSec=90
Restart=on-failure
RestartSec=10s
ExecStart=/home/{{ ethereum_user }}/bin/lighthouse validator_client \
--network {{ ethereum_network }} \
--suggested-fee-recipient="0x062f2c97726dcf22d54d2ba7795899dd2d6e160f" \
--graffiti ZanshinDojo \

[Install]
WantedBy=multi-user.target
